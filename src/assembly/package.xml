<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>src/main/javascript</directory>
            <includes>
                <include>*.js</include>
            </includes>
            <outputDirectory>${project.name}</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>src/main/resources/dist</directory>
            <includes>
                <include>*.js</include>
            </includes>
            <outputDirectory>${project.name}/dist</outputDirectory>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>coreutil</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>com.sagnitude:coreutil</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>networkutil</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>com.sagnitude:networkutil</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>domutil</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>com.sagnitude:domutil</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>cryptutil</outputDirectory>
            <unpack>true</unpack>
            <includes>
                <include>com.sagnitude:cryptutil</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>